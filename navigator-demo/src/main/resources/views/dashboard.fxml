<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="com.eden.navigatordemo.controllers.DashboardController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <ToolBar>
            <Button text="Settings" onAction="#openSettings"/>
            <Button text="Admin" onAction="#openAdmin"/>
